{
  "name": "scheduling-manager",
  "version": "1.0.0",
  "description": "A TypeScript scheduling manager application",
  "author": "Carlos Andr√©",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "npm run services:down && npm run services:up && npm run drizzle:migrate && nodemon src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "services:up": "docker compose -f infra/docker-compose.yaml up -d --wait",
    "services:stop": "docker compose -f infra/docker-compose.yaml stop",
    "services:down": "docker compose -f infra/docker-compose.yaml down",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:drop": "drizzle-kit drop",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint:check": "eslint .",
    "prepare": "husky",
    "commit": "cz"
  },
  "dependencies": {
    "dompurify": "^3.3.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "jsdom": "^27.1.0",
    "pg": "^8.16.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@types/express": "^5.0.4",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.6",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "nodemon": "^3.0.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.46.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
